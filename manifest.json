{
  "manifest_version": 1,
  "id": "http-adapter",
  "name": "HTTP",
  "short_name": "HTTP",
  "version": "0.6.0",
  "description": "Lets you make HTTP requests via actions",
  "homepage_url": "https://github.com/tim-hellhake/http-adapter#readme",
  "license": "MPL-2.0",
  "author": "Tim Hellhake",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "strict_min_version": "0.10.0",
      "strict_max_version": "*",
      "primary_type": "adapter"
    }
  },
  "options": {
    "schema": {
      "type": "object",
      "properties": {
        "debug": {
          "type": "boolean",
          "title": "Enable debug logging"
        },
        "devices": {
          "type": "array",
          "title": "List of devices to generate",
          "items": {
            "type": "object",
            "required": [
              "name"
            ],
            "properties": {
              "id": {
                "type": "string",
                "title": "The ID of the device (will be generated for you)",
                "readOnly": true
              },
              "name": {
                "type": "string",
                "title": "The name of the device"
              },
              "types": {
                "type": "array",
                "title": "The list of capabilities of the device",
                "items": {
                  "type": "string",
                  "title": "One of the capabilities of the device (https://iot.mozilla.org/schemas)",
                  "enum": [
                    "Alarm",
                    "AirQualitySensor",
                    "BarometricPressureSensor",
                    "BinarySensor",
                    "Camera",
                    "ColorControl",
                    "ColorSensor",
                    "DoorSensor",
                    "EnergyMonitor",
                    "HumiditySensor",
                    "LeakSensor",
                    "Light",
                    "Lock",
                    "MotionSensor",
                    "MultiLevelSensor",
                    "MultiLevelSwitch",
                    "OnOffSwitch",
                    "PushButton",
                    "SmartPlug",
                    "SmokeSensor",
                    "TemperatureSensor",
                    "Thermostat",
                    "VideoCamera"
                  ]
                }
              },
              "actions": {
                "type": "array",
                "title": "A list of HTTP actions",
                "items": {
                  "type": "object",
                  "title": "An action",
                  "required": [
                    "name",
                    "url",
                    "method",
                    "contentType"
                  ],
                  "properties": {
                    "name": {
                      "type": "string",
                      "title": "The name of the action"
                    },
                    "description": {
                      "type": "string",
                      "title": "Description of the action"
                    },
                    "type": {
                      "type": "string",
                      "title": "The type of the action (https://iot.mozilla.org/schemas/#capabilities)",
                      "enum": [
                        "FadeAction",
                        "LockAction",
                        "ToggleAction",
                        "UnlockAction"
                      ]
                    },
                    "url": {
                      "type": "string",
                      "title": "The URL"
                    },
                    "method": {
                      "type": "string",
                      "title": "The HTTP method",
                      "enum": [
                        "HEAD",
                        "GET",
                        "POST",
                        "PUT",
                        "DELETE"
                      ]
                    },
                    "contentType": {
                      "type": "string",
                      "title": "The HTTP content-type",
                      "enum": [
                        "application/x-www-form-urlencoded",
                        "application/json"
                      ]
                    },
                    "queryParameters": {
                      "type": "array",
                      "title": "A list of query parameters",
                      "items": {
                        "type": "object",
                        "title": "A parameter",
                        "required": [
                          "name",
                          "value"
                        ],
                        "properties": {
                          "name": {
                            "type": "string",
                            "title": "The name of the parameter"
                          },
                          "value": {
                            "type": "string",
                            "title": "The value of the parameter"
                          }
                        }
                      }
                    },
                    "bodyParameters": {
                      "type": "array",
                      "title": "A list of body parameters",
                      "items": {
                        "type": "object",
                        "title": "A parameter",
                        "required": [
                          "name",
                          "value"
                        ],
                        "properties": {
                          "name": {
                            "type": "string",
                            "title": "The name of the parameter"
                          },
                          "value": {
                            "type": "string",
                            "title": "The value of the parameter"
                          }
                        }
                      }
                    }
                  }
                }
              },
              "properties": {
                "type": "array",
                "title": "A list of HTTP properties",
                "items": {
                  "type": "object",
                  "title": "A property",
                  "required": [
                    "name",
                    "url",
                    "method",
                    "contentType"
                  ],
                  "properties": {
                    "name": {
                      "type": "string",
                      "title": "The name of the property"
                    },
                    "description": {
                      "type": "string",
                      "title": "Description of the property"
                    },
                    "type": {
                      "type": "string",
                      "title": "The type of the property (https://iot.mozilla.org/schemas/#capabilities)",
                      "enum": [
                        "AlarmProperty",
                        "BarometricPressureProperty",
                        "BooleanProperty",
                        "BrightnessProperty",
                        "ColorModeProperty",
                        "ColorProperty",
                        "ColorTemperatureProperty",
                        "ConcentrationProperty",
                        "CurrentProperty",
                        "DensityProperty",
                        "FrequencyProperty",
                        "HeatingCoolingProperty",
                        "HumidityProperty",
                        "ImageProperty",
                        "InstantaneousPowerFactorProperty",
                        "InstantaneousPowerProperty",
                        "LeakProperty",
                        "LevelProperty",
                        "LockedProperty",
                        "MotionProperty",
                        "OnOffProperty",
                        "OpenProperty",
                        "PushedProperty",
                        "SmokeProperty",
                        "TargetTemperatureProperty",
                        "TemperatureProperty",
                        "ThermostatModeProperty",
                        "VideoProperty",
                        "VoltageProperty"
                      ]
                    },
                    "url": {
                      "type": "string",
                      "title": "The URL"
                    },
                    "method": {
                      "type": "string",
                      "title": "The HTTP method",
                      "enum": [
                        "HEAD",
                        "GET",
                        "POST",
                        "PUT",
                        "DELETE"
                      ]
                    },
                    "contentType": {
                      "type": "string",
                      "title": "The HTTP content-type",
                      "enum": [
                        "application/x-www-form-urlencoded",
                        "application/json"
                      ]
                    },
                    "queryParameters": {
                      "type": "array",
                      "title": "A list of query parameters",
                      "items": {
                        "type": "object",
                        "title": "A parameter",
                        "required": [
                          "name",
                          "value"
                        ],
                        "properties": {
                          "name": {
                            "type": "string",
                            "title": "The name of the parameter"
                          },
                          "value": {
                            "type": "string",
                            "title": "The value of the parameter"
                          }
                        }
                      }
                    },
                    "bodyParameters": {
                      "type": "array",
                      "title": "A list of body parameters",
                      "items": {
                        "type": "object",
                        "title": "A parameter",
                        "required": [
                          "name",
                          "value"
                        ],
                        "properties": {
                          "name": {
                            "type": "string",
                            "title": "The name of the parameter"
                          },
                          "value": {
                            "type": "string",
                            "title": "The value of the parameter"
                          }
                        }
                      }
                    },
                    "responseType": {
                      "type": "string",
                      "title": "The type of the response",
                      "enum": [
                        "string",
                        "number",
                        "integer",
                        "boolean"
                      ]
                    },
                    "pollInterval": {
                      "type": "number",
                      "title": "The time in seconds between two poll requests"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
