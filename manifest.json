{
  "manifest_version": 1,
  "id": "http-adapter",
  "name": "HTTP",
  "short_name": "HTTP",
  "version": "0.4.1",
  "description": "Lets you make HTTP requests via actions",
  "homepage_url": "https://github.com/tim-hellhake/http-adapter#readme",
  "license": "MPL-2.0",
  "author": "Tim Hellhake",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "strict_min_version": "0.10.0",
      "strict_max_version": "*",
      "primary_type": "adapter"
    }
  },
  "options": {
    "schema": {
      "type": "object",
      "properties": {
        "debug": {
          "type": "boolean",
          "title": "Enable debug logging"
        },
        "devices": {
          "type": "array",
          "title": "List of devices to generate",
          "items": {
            "type": "object",
            "required": [
              "name"
            ],
            "properties": {
              "id": {
                "type": "string",
                "title": "The ID of the device (will be generated for you)",
                "readOnly": true
              },
              "name": {
                "type": "string",
                "title": "The name of the device"
              },
              "actions": {
                "type": "array",
                "title": "A list of HTTP actions",
                "items": {
                  "type": "object",
                  "title": "An action",
                  "required": [
                    "name",
                    "url",
                    "method",
                    "contentType"
                  ],
                  "properties": {
                    "name": {
                      "type": "string",
                      "title": "The name of the action"
                    },
                    "description": {
                      "type": "string",
                      "title": "Description of the action"
                    },
                    "url": {
                      "type": "string",
                      "title": "The URL"
                    },
                    "method": {
                      "type": "string",
                      "title": "The HTTP method",
                      "enum": [
                        "HEAD",
                        "GET",
                        "POST",
                        "PUT",
                        "DELETE"
                      ]
                    },
                    "contentType": {
                      "type": "string",
                      "title": "The HTTP content-type",
                      "enum": [
                        "application/x-www-form-urlencoded",
                        "application/json"
                      ]
                    },
                    "queryParameters": {
                      "type": "array",
                      "title": "A list of query parameters",
                      "items": {
                        "type": "object",
                        "title": "A parameter",
                        "required": [
                          "name",
                          "value"
                        ],
                        "properties": {
                          "name": {
                            "type": "string",
                            "title": "The name of the parameter"
                          },
                          "value": {
                            "type": "string",
                            "title": "The value of the parameter"
                          }
                        }
                      }
                    },
                    "bodyParameters": {
                      "type": "array",
                      "title": "A list of body parameters",
                      "items": {
                        "type": "object",
                        "title": "A parameter",
                        "required": [
                          "name",
                          "value"
                        ],
                        "properties": {
                          "name": {
                            "type": "string",
                            "title": "The name of the parameter"
                          },
                          "value": {
                            "type": "string",
                            "title": "The value of the parameter"
                          }
                        }
                      }
                    }
                  }
                }
              },
              "properties": {
                "type": "array",
                "title": "A list of HTTP properties",
                "items": {
                  "type": "object",
                  "title": "An action",
                  "required": [
                    "name",
                    "url",
                    "method",
                    "contentType"
                  ],
                  "properties": {
                    "name": {
                      "type": "string",
                      "title": "The name of the property"
                    },
                    "description": {
                      "type": "string",
                      "title": "Description of the property"
                    },
                    "url": {
                      "type": "string",
                      "title": "The URL"
                    },
                    "method": {
                      "type": "string",
                      "title": "The HTTP method",
                      "enum": [
                        "HEAD",
                        "GET",
                        "POST",
                        "PUT",
                        "DELETE"
                      ]
                    },
                    "contentType": {
                      "type": "string",
                      "title": "The HTTP content-type",
                      "enum": [
                        "application/x-www-form-urlencoded",
                        "application/json"
                      ]
                    },
                    "queryParameters": {
                      "type": "array",
                      "title": "A list of query parameters",
                      "items": {
                        "type": "object",
                        "title": "A parameter",
                        "required": [
                          "name",
                          "value"
                        ],
                        "properties": {
                          "name": {
                            "type": "string",
                            "title": "The name of the parameter"
                          },
                          "value": {
                            "type": "string",
                            "title": "The value of the parameter"
                          }
                        }
                      }
                    },
                    "bodyParameters": {
                      "type": "array",
                      "title": "A list of body parameters",
                      "items": {
                        "type": "object",
                        "title": "A parameter",
                        "required": [
                          "name",
                          "value"
                        ],
                        "properties": {
                          "name": {
                            "type": "string",
                            "title": "The name of the parameter"
                          },
                          "value": {
                            "type": "string",
                            "title": "The value of the parameter"
                          }
                        }
                      }
                    },
                    "pollInterval": {
                      "type": "number",
                      "title": "The time in seconds between two poll requests"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
