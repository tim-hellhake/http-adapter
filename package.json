{
  "name": "http-adapter",
  "display_name": "HTTP",
  "version": "0.4.0",
  "description": "Lets you make HTTP requests via actions",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/http-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/http-adapter/issues"
  },
  "homepage": "https://github.com/tim-hellhake/http-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "manifest.json",
    "lib/index.js",
    "lib/http-adapter.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "schema": {
      "type": "object",
      "properties": {
        "devices": {
          "type": "array",
          "title": "List of devices to generate",
          "items": {
            "type": "object",
            "required": [
              "name"
            ],
            "properties": {
              "id": {
                "type": "string",
                "title": "The ID of the device (will be generated for you)",
                "readOnly": true
              },
              "name": {
                "type": "string",
                "title": "The name of the device"
              },
              "actions": {
                "type": "array",
                "title": "A list of HTTP actions",
                "items": {
                  "type": "object",
                  "title": "An action",
                  "required": [
                    "name",
                    "url",
                    "method",
                    "contentType"
                  ],
                  "properties": {
                    "name": {
                      "type": "string",
                      "title": "The name of the action"
                    },
                    "description": {
                      "type": "string",
                      "title": "Description of the action"
                    },
                    "url": {
                      "type": "string",
                      "title": "The URL"
                    },
                    "method": {
                      "type": "string",
                      "title": "The HTTP method",
                      "enum": [
                        "HEAD",
                        "GET",
                        "POST",
                        "PUT",
                        "DELETE"
                      ]
                    },
                    "contentType": {
                      "type": "string",
                      "title": "The HTTP content-type",
                      "enum": [
                        "application/x-www-form-urlencoded",
                        "application/json"
                      ]
                    },
                    "queryParameters": {
                      "type": "array",
                      "title": "A list of query parameters",
                      "items": {
                        "type": "object",
                        "title": "A parameter",
                        "required": [
                          "name",
                          "value"
                        ],
                        "properties": {
                          "name": {
                            "type": "string",
                            "title": "The name of the parameter"
                          },
                          "value": {
                            "type": "string",
                            "title": "The value of the parameter"
                          }
                        }
                      }
                    },
                    "bodyParameters": {
                      "type": "array",
                      "title": "A list of body parameters",
                      "items": {
                        "type": "object",
                        "title": "A parameter",
                        "required": [
                          "name",
                          "value"
                        ],
                        "properties": {
                          "name": {
                            "type": "string",
                            "title": "The name of the parameter"
                          },
                          "value": {
                            "type": "string",
                            "title": "The value of the parameter"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "dependencies": {
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^12.12.8",
    "@types/node-fetch": "^2.5.3",
    "typescript": "^3.7.2"
  }
}
